// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vision {
  id          String   @id @default(cuid())
  threeYearVision String? // The 3-year vision statement
  twelveWeekGoals String? // JSON string of 12-week goals array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  twelveWeekPlans TwelveWeekPlan[]
}

model TwelveWeekPlan {
  id          String   @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  goals       String   // JSON string of goals array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  visionId String?
  vision   Vision?  @relation(fields: [visionId], references: [id])
  weeklyPlans WeeklyPlan[]
}

model WeeklyPlan {
  id                   String   @id @default(cuid())
  weekNumber          Int
  startDate           DateTime
  endDate             DateTime
  completionPercentage Float    @default(0)
  isSuccessful        Boolean  @default(false) // 80%+ threshold
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  twelveWeekPlanId String
  twelveWeekPlan   TwelveWeekPlan @relation(fields: [twelveWeekPlanId], references: [id])
  tasks Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  dueDate     DateTime?
  priority    Priority @default(MEDIUM)
  category    String?
  frequency   Frequency @default(WEEKLY)
  taskType    TaskType @default(WEEK_SPECIFIC) // RECURRING or WEEK_SPECIFIC
  completionCount Int    @default(0) // For recurring tasks: how many times completed this week
  completionTarget Int   @default(1) // For recurring tasks: target completions per week
  lastCompleted DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  weeklyPlanId String?
  weeklyPlan   WeeklyPlan? @relation(fields: [weeklyPlanId], references: [id])
}

enum Frequency {
  DAILY
  WEEKDAYS // Monday-Friday
  WEEKENDS // Saturday-Sunday
  THREE_TIMES_WEEK // 3x per week
  TWICE_WEEK // 2x per week
  WEEKLY
  BIWEEKLY
  MONTHLY
  ONCE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskType {
  RECURRING    // Task persists across weeks
  WEEK_SPECIFIC // Task is specific to one week
}
